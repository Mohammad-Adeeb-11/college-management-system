<%- include("partials/header") %>

<main class="flex-fill admin-section">
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="admin-form-card">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h3 class="mb-0">Edit Notice</h3>
              <a href="/admin/notices" class="btn btn-outline-secondary btn-sm">
                ‚Üê Back
              </a>
            </div>

            <form action="/admin/notices/edit/<%= notice._id %>" method="POST">
              <!-- Title -->
              <div class="mb-3">
                <label class="form-label fw-semibold"> Notice Title </label>
                <input
                  type="text"
                  name="title"
                  value="<%= notice.title %>"
                  class="form-control"
                  required
                />
              </div>

              <!-- Message -->
              <div class="mb-4">
                <label class="form-label fw-semibold"> Notice Message </label>
                <textarea name="message" rows="5" class="form-control" required>
<%= notice.message %></textarea
                >
              </div>

              <!-- Action Buttons -->
              <div class="d-flex justify-content-between">
                <a
                  href="/admin/notices/delete/<%= notice._id %>"
                  class="btn btn-outline-danger"
                >
                  <i class="bi bi-trash me-1"></i>
                  Delete
                </a>

                <button type="submit" class="btn btn-dark px-4">
                  <i class="bi bi-check-circle me-1"></i>
                  Update Notice
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("partials/footer") %>
