<%- include("partials/header") %>

<main class="flex-fill admin-section">
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="admin-form-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h3 class="mb-0">Add New Notice</h3>
              <a href="/admin/notices" class="btn btn-outline-secondary btn-sm">
                ‚Üê Back
              </a>
            </div>

            <form action="/admin/notices/add" method="POST">
              <!-- Notice Title -->
              <div class="mb-3">
                <label class="form-label fw-semibold"> Notice Title </label>
                <input
                  type="text"
                  name="title"
                  class="form-control"
                  placeholder="Enter notice title"
                  required
                />
              </div>

              <!-- Notice Message -->
              <div class="mb-4">
                <label class="form-label fw-semibold"> Notice Message </label>
                <textarea
                  name="message"
                  rows="5"
                  class="form-control"
                  placeholder="Write the notice details here..."
                  required
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div class="text-end">
                <button type="submit" class="btn btn-dark px-4">
                  <i class="bi bi-megaphone-fill me-1"></i>
                  Publish Notice
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("partials/footer") %>
