<%- include("partials/header") %>

<main class="flex-fill">

<!-- HERO -->
<section class="home-hero text-white text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">Shaping The Future Through Education</h1>
    <p class="lead mt-3">
      Excellence in academics, innovation, and career growth.
    </p>

    <div class="mt-4">
      <a href="/courses" class="btn btn-warning btn-lg me-3">
        Explore Courses
      </a>
      <a href="/about" class="btn btn-outline-light btn-lg">
        Learn More
      </a>
    </div>
  </div>
</section>

<!-- FEATURES -->
<section class="container py-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold">Why Choose Our College?</h2>
  </div>

  <div class="row g-4 text-center">

    <div class="col-md-4">
      <div class="feature-card">
        <i class="bi bi-mortarboard-fill display-5 text-primary"></i>
        <h5 class="mt-3">Quality Education</h5>
        <p>Industry-oriented curriculum and experienced faculty.</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="feature-card">
        <i class="bi bi-laptop-fill display-5 text-success"></i>
        <h5 class="mt-3">Modern Infrastructure</h5>
        <p>Smart classrooms and advanced computer labs.</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="feature-card">
        <i class="bi bi-briefcase-fill display-5 text-warning"></i>
        <h5 class="mt-3">Placement Support</h5>
        <p>Strong industry connections and career assistance.</p>
      </div>
    </div>

  </div>
</section>

<!-- STATS -->
<section class="home-stats text-white text-center py-5">
  <div class="container">
    <div class="row g-4">

      <div class="col-md-3">
        <h2>2500+</h2>
        <p>Students</p>
      </div>

      <div class="col-md-3">
        <h2>50+</h2>
        <p>Faculty</p>
      </div>

      <div class="col-md-3">
        <h2>20+</h2>
        <p>Courses</p>
      </div>

      <div class="col-md-3">
        <h2>90%</h2>
        <p>Placement Rate</p>
      </div>

    </div>
  </div>
</section>

<!-- LATEST NOTICES -->
<section class="container py-5">
  <div class="text-center mb-4">
    <h2 class="fw-bold">Latest Notices</h2>
  </div>

  <div class="row g-4">

    <% notices.forEach(n => { %>
      <div class="col-md-4">
        <div class="notice-card-modern">
          <div class="notice-date">
            <%= new Date(n.createdAt).toDateString() %>
          </div>

          <h5 class="mt-3"><%= n.title %></h5>

          <p>
            <%= n.message.length > 100 
                ? n.message.substring(0, 100) + "..."
                : n.message %>
          </p>
        </div>
      </div>
    <% }) %>

  </div>

  <div class="text-center mt-4">
    <a href="/notices" class="btn btn-outline-dark">
      View All Notices
    </a>
  </div>
</section>

<!-- CTA -->
<section class="home-cta text-center text-white py-5">
  <div class="container">
    <h2>Start Your Academic Journey Today</h2>
    <a href="/login" class="btn btn-warning btn-lg mt-3">
      Get Started
    </a>
  </div>
</section>

</main>

<%- include("partials/footer") %>
