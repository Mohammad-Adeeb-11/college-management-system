<%- include("partials/header") %>

<main class="flex-fill student-dashboard">
  <div class="container py-5">
    <!-- Welcome Section -->
    <div class="mb-5">
      <h2 class="fw-bold">Welcome, <%= student.name %> ðŸ‘‹</h2>
      <p class="text-muted">Here is your academic overview.</p>
    </div>

    <div class="row g-4">
      <!-- Profile Card -->
      <div class="col-md-4">
        <div class="student-card">
          <h5>Profile Information</h5>
          <hr />
          <p><strong>Name:</strong> <%= student.name %></p>
          <p><strong>Email:</strong> <%= student.email %></p>
          <p>
            <strong>Joined:</strong>
            <%= student.createdAt ? new Date(student.createdAt).toDateString() :
            "N/A" %>
          </p>
        </div>
      </div>

      <!-- Academic Overview -->
      <div class="col-md-8">
        <div class="student-card">
          <h5>Academic Overview</h5>
          <hr />

          <div class="row text-center mt-3">
            <div class="col-md-4">
              <h3 class="text-primary">3</h3>
              <p>Enrolled Courses</p>
            </div>

            <div class="col-md-4">
              <h3 class="text-success">5</h3>
              <p>Assignments</p>
            </div>

            <div class="col-md-4">
              <h3 class="text-warning">2</h3>
              <p>Upcoming Exams</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-5">
      <h4 class="mb-3">Quick Actions</h4>

      <div class="row g-4">
        <div class="col-md-4">
          <a href="/courses" class="student-action"> View Courses </a>
        </div>

        <div class="col-md-4">
          <a href="/notices" class="student-action"> View Notices </a>
        </div>

        <div class="col-md-4">
          <a href="/logout" class="student-action bg-danger"> Logout </a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("partials/footer") %>
