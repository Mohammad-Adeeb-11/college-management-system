<%- include("partials/header") %>

<main class="flex-fill admin-dashboard">
  <div class="container py-5">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Admin Dashboard</h2>
      <span class="badge bg-dark">Welcome, Admin</span>
    </div>

    <!-- Stats Row -->
    <div class="row g-4 mb-5">
      <!-- Courses -->
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="/admin/courses" class="dashboard-card-link">
          <div
            class="dashboard-card d-flex justify-content-between align-items-center"
          >
            <div>
              <h6>Total Courses</h6>
              <h2><%= coursesCount %></h2>
              <small>Manage Courses →</small>
            </div>
            <i class="bi bi-journal-bookmark-fill stat-icon text-primary"></i>
          </div>
        </a>
      </div>

      <!-- Students -->
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="/admin/students" class="dashboard-card-link">
          <div
            class="dashboard-card d-flex justify-content-between align-items-center"
          >
            <div>
              <h6>Total Students</h6>
              <h2><%= studentsCount %></h2>
              <small>Manage Students →</small>
            </div>
            <i class="bi bi-people-fill stat-icon text-success"></i>
          </div>
        </a>
      </div>

      <!-- Notices -->
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="/admin/notices" class="dashboard-card-link">
          <div
            class="dashboard-card d-flex justify-content-between align-items-center"
          >
            <div>
              <h6>Total Notices</h6>
              <h2><%= noticesCount %></h2>
              <small>Manage Notices →</small>
            </div>
            <i class="bi bi-megaphone-fill stat-icon text-warning"></i>
          </div>
        </a>
      </div>
    </div>

    <!-- Quick Actions -->
    <h4 class="mb-3">Quick Actions</h4>

    <div class="row g-4">
      <div class="col-md-4">
        <a href="/admin/courses/add" class="quick-card"> Add Course </a>
      </div>

      <div class="col-md-4">
        <a href="/admin/notices/add" class="quick-card"> Add Notice </a>
      </div>

      <div class="col-md-4">
        <a href="/admin/courses" class="quick-card"> Manage Courses </a>
      </div>
    </div>
  </div>
</main>

<%- include("partials/footer") %>
