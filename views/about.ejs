<%- include("partials/header") %>

<main class="flex-fill">
  <!-- PAGE HERO -->
  <section class="about-hero text-center text-white">
    <div class="container">
      <h1>About My College</h1>
      <p>Empowering students with knowledge, skills, and values.</p>
    </div>
  </section>

  <!-- ABOUT CONTENT -->
  <section class="container page-padding">
    <div class="row align-items-center g-5">
      <div class="col-md-6">
        <img src="/images/college.jpg" class="img-fluid rounded shadow" />
      </div>
      <div class="col-md-6">
        <h2>Who We Are</h2>
        <p>
          My College is committed to providing quality education and shaping
          future leaders. With experienced faculty, modern infrastructure, and
          industry-focused curriculum, we prepare students for real-world
          challenges.
        </p>
        <p>
          Since our establishment, we have consistently maintained excellence in
          academics and placements.
        </p>
      </div>
    </div>
  </section>

  <!-- MISSION & VISION -->
  <section class="bg-light page-padding">
    <div class="container text-center">
      <div class="row g-4">
        <div class="col-md-6">
          <div class="about-card">
            <h4>Our Mission</h4>
            <p>
              To provide accessible and high-quality education that empowers
              students to achieve their academic and career goals.
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="about-card">
            <h4>Our Vision</h4>
            <p>
              To become a center of excellence in education and innovation,
              fostering future-ready professionals.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

