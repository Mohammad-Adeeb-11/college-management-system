<%- include("partials/header") %>

<main class="flex-fill admin-section">

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="admin-form-card">
          <h3 class="text-center mb-4">Edit Course</h3>

          <form action="/admin/courses/edit/<%= course._id %>" method="POST">

            <!-- Course Name -->
            <div class="mb-3">
              <label class="form-label">Course Name</label>
              <input
                type="text"
                name="name"
                value="<%= course.name %>"
                class="form-control"
                required
              />
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label class="form-label">Category</label>
              <select name="category" class="form-select" required>
                <option <%= course.category === "Undergraduate" ? "selected" : "" %>>Undergraduate</option>
                <option <%= course.category === "Postgraduate" ? "selected" : "" %>>Postgraduate</option>
                <option <%= course.category === "Diploma" ? "selected" : "" %>>Diploma</option>
              </select>
            </div>

            <!-- Duration -->
            <div class="mb-3">
              <label class="form-label">Duration</label>
              <select name="duration" class="form-select" required>
                <option <%= course.duration === "1 Year" ? "selected" : "" %>>1 Year</option>
                <option <%= course.duration === "2 Years" ? "selected" : "" %>>2 Years</option>
                <option <%= course.duration === "3 Years" ? "selected" : "" %>>3 Years</option>
              </select>
            </div>

            <!-- Description -->
            <div class="mb-4">
              <label class="form-label">Description</label>
              <textarea
                name="description"
                rows="4"
                class="form-control"
                required
              ><%= course.description %></textarea>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
              <a href="/admin/courses" class="btn btn-outline-secondary">
                Cancel
              </a>

              <button type="submit" class="btn btn-dark px-4">
                Update Course
              </button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</section>

</main>

<%- include("partials/footer") %>
